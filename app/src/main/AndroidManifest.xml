<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.maxkot.mediaplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NativeWindowActivity"
            android:label="@string/title_activity_native_window" />
        <activity
            android:name="org.libsdl.app.SDLActivity"
            android:label="@string/title_activity_sdl" />
        <activity
            android:name=".OpenglGraphicsDemoActivity"
            android:label="@string/title_activity_opengl_graphics_demo" />
        <activity
            android:name=".OpenSLDemoActivity"
            android:label="@string/title_activity_open_sldemo" />
        <activity
            android:name=".AudioTrackDemoActivity"
            android:label="@string/title_activity_audio_track_demo" />
        <activity
            android:name=".FFMpegOpengGLActivity"
            android:label="@string/title_activity_ffmpeg_openg_gl"></activity>
    </application>

</manifest>